<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000002"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/gradient1"
        android:src="@drawable/image1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/version21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:text="VERSION'21"
        android:textSize="48dp"
        android:textColor="#fff"
        />


    <View
        android:id="@+id/line"
        android:layout_width="80dp"
        android:layout_height="12dp"
        android:background="@drawable/gradient2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/version21"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:id="@+id/social"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginStart="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/line">


        <ImageView
            android:id="@+id/facebook"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/social_icon_size"
            android:layout_height="@dimen/social_icon_size"
            android:src="@drawable/ic_facebook"
            android:layout_margin="12dp"
            />

        <ImageView
            android:id="@+id/youtube"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/social_icon_size"
            android:layout_height="@dimen/social_icon_size"
            android:src="@drawable/ic_youtube"
            android:layout_margin="12dp"
            />

        <ImageView
            android:id="@+id/instagram"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/social_icon_size"
            android:layout_height="@dimen/social_icon_size"
            android:src="@drawable/ic_instagram"
            android:layout_margin="12dp"
            />
        <ImageView
            android:id="@+id/linkedin"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/social_icon_size"
            android:layout_height="@dimen/social_icon_size"
            android:src="@drawable/ic_linkedin"
            android:layout_margin="12dp"
            />
        <ImageView
            android:id="@+id/discord"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/social_icon_size"
            android:layout_height="@dimen/social_icon_size"
            android:src="@drawable/ic_wechat"
            android:layout_margin="12dp"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/social"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Theme Introduction"
        android:textColor="#EC6867"
        android:textSize="19sp"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introduction"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Decentralized means they are independent, and no one can control them as a group. Deterministic i.e., they perform the same function irrespective of the environment they are executed."
        android:textColor="#D2D2D5"
        android:textSize="18sp"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/about"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="About Us"
        android:layout_marginEnd="4dp"
        android:textColor="#BB7714"
        android:textSize="40dp"/>


    <TextView
        android:id="@+id/aboutDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/about"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Version is an annual all India MCA meet conducted by the students of MCA at NIT, Trichy. Since its conception in 1991, Version has aimed to bring the best students from MCA all over India to NITT, to compete against each other. Version includes a variety of events which aims to challenge students to think outside the box and be creative. Version is the star event from MCA at NIT, Trichy."
        android:textColor="#D2D2D5"
        android:textSize="18sp"
        />


    <TextView
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:id="@+id/technologies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/aboutDesc"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Technologies Used (Themes) :"
        android:textColor="#EC6867"
        android:layout_marginTop="32dp"
        android:textSize="19sp"
        />


    <TextView
        android:layout_marginTop="24dp"
        android:id="@+id/tech1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/technologies"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/tech1"
        android:textColor="#fff"
        android:textSize="18sp"
        android:ellipsize="end"
        />

    <TextView
        android:layout_marginTop="13dp"
        android:id="@+id/tech2"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tech1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/tech2"
        android:textColor="#fff"
        android:textSize="18sp"
        />

    <View

        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tech2"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#647884"/>

    <LinearLayout

        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:src="@drawable/contact"/>

        <TextView
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fest : Version'21"
            android:textColor="#fff"
            android:textSize="22dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:src="@drawable/contact"/>

        <TextView
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theme : Deconsentro"
            android:textColor="#fff"
            android:textSize="20sp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/layout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:src="@drawable/person"/>

        <TextView
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email : contact@version21.in"
            android:textColor="#fff"
            android:textSize="20sp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Location : NIT Trichy"
            android:textColor="#fff"
            android:textSize="20sp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingBottom="32dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/layout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:src="@drawable/home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:text="Department : Computer Application"
            android:textColor="#fff"
            android:textSize="20sp"
            />


    </LinearLayout>


    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout5"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#647884"/>


    <LinearLayout
        android:id="@+id/bottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanks for scrolling,"
            android:textColor="#fff"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" that's all folks."
            android:textColor="#ACACB5"
            android:textSize="18sp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="32dp"
        android:id="@+id/social2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/bottomText">


        <ImageView
            android:id="@+id/facebook2"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/social_icon_size2"
            android:layout_height="@dimen/social_icon_size2"
            android:src="@drawable/ic_facebook"
            android:layout_margin="12dp"
            />

        <ImageView
            android:id="@+id/youtube2"
            android:layout_gravity="center_horizontal"

            android:layout_width="@dimen/social_icon_size2"
            android:layout_height="@dimen/social_icon_size2"
            android:src="@drawable/ic_youtube"
            android:layout_margin="12dp"
            />
        <ImageView

            android:id="@+id/instagram2"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/social_icon_size2"
            android:layout_height="@dimen/social_icon_size2"
            android:src="@drawable/ic_instagram"
            android:layout_margin="12dp"
            />
        <ImageView
            android:id="@+id/linkedin2"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/social_icon_size2"
            android:layout_height="@dimen/social_icon_size2"
            android:src="@drawable/ic_linkedin"
            android:layout_margin="12dp"
            />
        <ImageView
            android:id="@+id/discord2"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/social_icon_size2"
            android:layout_height="@dimen/social_icon_size2"
            android:src="@drawable/ic_wechat"
            android:layout_margin="12dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="-16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/social2"
        >


        <TextView
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Developed by EEC (Version'21)"
            android:textColor="#4370A1"
            android:textSize="16.5sp"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_heart_symbol"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
